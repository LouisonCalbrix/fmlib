(executable
  (name temperature)
  (modules temperature)
  (modes js)
  (libraries fmlib_browser)
)

(rule
  (targets temperature.js) (deps temperature.bc.js)
  (mode (promote (until-clean)))
  (action (copy temperature.bc.js temperature.js))
)




