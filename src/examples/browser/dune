(executable
   (name single_page)
   (modules
     single_page
     single_page_counter
     single_page_clock
     single_page_die
     single_page_message
     single_page_events
     single_page_input
     single_page_http
   )
   (modes js)
   (libraries fmlib_browser)
)

(rule
   (targets single_page.js)
   (deps single_page.bc.js)
   (mode (promote (until-clean)))
   (action (copy %{deps} %{targets}))
)

(rule
   (deps (file single_page.js))
   (action
   (with-stdout-to
     assets.ml
     (progn
       (echo "let js = {|")
       (cat single_page.js)
       (echo "|}\n")
       (echo "let html = {|")
       (cat single_page.html)
       (echo "|}\n"))
      )
   )
)

(executable
  (name single_page_backend)
  (modules single_page_backend assets)
  (libraries fmlib_std unix)
  (promote (until-clean))
)
